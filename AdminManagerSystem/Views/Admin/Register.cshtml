@{
    ViewBag.Title = "register";
}

@using System.Web.Mvc.Html
@model AdminManagerSystem.Models.Moderator

<div class="element-wrapper col-8 mx-auto">

<div class="os-tabs-controls">
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#moderator" role="tab" aria-controls="moderator"
               aria-selected="true">
                Moderador
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#affinity" role="tab" aria-controls="affinity"
               aria-selected="false">
                Afinidades
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#voluntary" role="tab" aria-controls="voluntary"
               aria-selected="false">
                Voluntário
            </a>
        </li>
    </ul>
</div>

@* <h6 class="element-header">Dashboard</h6> *@
<div class="element-box">

<div class="tab-content">
<div class="tab-pane fade show active" id="moderator" role="tabpanel">
    <h5 class="form-header">Moderadores</h5>

    @* Modal Register Moderator *@

    <button class="mr-2 mb-2 btn btn-primary" data-target=".register-moderator-modal" data-toggle="modal">
        Novo Moderador
    </button>
    <div aria-hidden="true" aria-labelledby="myLargeModalLabel" class="modal fade register-moderator-modal"
         role="dialog" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Cadastro de Moderador</h5>
                    <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                        <span aria-hidden="true">
                            &times;
                        </span>
                    </button>
                </div>
                @using (Html.BeginForm("SaveModerator", "Admin", FormMethod.Post))
                {
                <div class="modal-body">
                    <legend>
                        <span></span>
                    </legend>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>@Html.LabelFor(m => m.FirstName)</label>
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "help-block form-text with-errors form-control-feedback" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>@Html.LabelFor(m => m.LastName)</label>
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "help-block form-text with-errors form-control-feedback" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for=""> E-mail</label>
                        <input class="form-control" data-error="E-mail inválido"
                               placeholder="Insira o e-mail" required="required" type="email">
                        <div class="help-block form-text with-errors form-control-feedback">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-2">
                           <label>@Html.LabelFor(m => m.Cep)</label>
                            @Html.TextBoxFor(m => m.Cep, new { @id = "cep", @class = "mask_cep form-control" })
                            @Html.ValidationMessageFor(m => m.Cep, "", new { @class = "help-block form-text with-errors form-control-feedback" })
                        </div>

                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(m => m.Username)</label>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "help-block form-text with-errors form-control-feedback" })
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>@Html.LabelFor(m => m.Password)</label>
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "help-block form-text with-errors form-control-feedback" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>@Html.LabelFor(m => m.ConfirmPassword)</label>
                                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "help-block form-text with-errors form-control-feedback" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-sm-2">
                        <label>@Html.LabelFor(m => m.Cep)</label>
                        @Html.TextBoxFor(m => m.Cep, new { @id = "cep", @class = "mask_cep form-control" })
                        @Html.ValidationMessageFor(m => m.Cep, "", new { @class = "help-block form-text with-errors form-control-feedback" })
                    </div>




                    <!---Dados do endereço antigo-->
                    <div class="form-group">
                        <label for=""> Estado</label>
                        <select class="form-control">
                            <option value="New York">RS - Rio Grande do Sul</option>
                            <option value="California">SP - Sao Paulo</option>
                            <option value="Boston">SC - Santa Catarina</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for=""> Cidade</label>
                        <select class="form-control">
                            <option value="New York">Caxias do Sul</option>
                            <option value="New York">Farroupilha</option>
                            <option value="New York">Porto Alegre</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for=""> Rua</label>
                                <input class="form-control" data-error="Informe a Rua" placeholder="Rua"
                                       required="required" type="text">
                                <div class="help-block form-text with-errors form-control-feedback">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="">Numero</label>
                                <input class="form-control" data-error="Informe o numero do endere�o"
                                       placeholder="Numero do endereço" required="required" type="number">
                                <div class="help-block form-text with-errors form-control-feedback">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label for="">Bairro</label>
                                <input class="form-control" data-error="Informe o Bairro"
                                       placeholder="Bairro" required="required" type="text">
                                <div class="help-block form-text with-errors form-control-feedback">
                                </div>
                            </div>
                        </div>
                    </div>











                    <fieldset class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for=""> Telefone</label>
                                    <input class="form-control" data-minlength="8"
                                           placeholder="Telefone" required="required" type="number">
                                    <div class="help-block form-text text-muted form-control-feedback">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                        </div>
                        <div class="form-group">
                            <label path="photo">Foto</label>
                            <div class="attachment attachment--image">
                                <input onchange="changePhoto(this)" class="file" type="file" id="photo"
                                       name="photo" accept=".jpg,.jpeg,.png,.gif" required="required" />
                                <div class="attachment--label">
                                    <span class="placeholder">Imagem (jpg, jpeg, png, gif)</span>
                                    <span class="file-name"></span>
                                    <span class="attachment--remove">Remover</span>
                                </div>
                                <div class="attachment--error"></div>
                            </div>
                        </div>
                    </fieldset>
                </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" data-dismiss="modal" type="button">
                            Sair
                        </button>
                        <button class="btn btn-primary" type="submit">
                            Salvar
                        </button>
                    </div>
                }




            </div>
        </div>
    </div>
    @* End Modal Register Moderator *@

    <legend>
        <span></span>
    </legend>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">E-Mail</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Guilherme</td>
            <td>guilherme@hotmail.com</td>
        </tr>
        <tr>
            <th scope="row">2</th>
            <td>João Pedro</td>
            <td>joaopedro@hotmail.com</td>
        </tr>
        <tr>
            <th scope="row">3</th>
            <td>Jonas</td>
            <td>joans@hotmail.com</td>
        </tr>
        </tbody>
    </table>
</div>
<div class="tab-pane fade" id="affinity" role="tabpanel">
    <h5 class="form-header">Afinidades</h5>
    <legend>
        <span></span>
    </legend>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Infantil</td>
        </tr>
        <tr>
            <th scope="row">2</th>
            <td>Pets</td>
        </tr>
        <tr>
            <th scope="row">3</th>
            <td>Idosos</td>
        </tr>
        <tr>
            <th scope="row">4</th>
            <td>Necessitados</td>
        </tr>
        <tr>
            <th scope="row">5</th>
            <td>Meio Ambiente</td>
        </tr>
        </tbody>
    </table>
</div>
<div class="tab-pane fade" id="voluntary" role="tabpanel">
</div>
</div>

</div>
</div>

@section scripts {
    <script>

        $(document).ready(function() {
            if (@ViewBag.save_moderator_error) {
                $('.register-moderator-modal').modal('show')
            }
        })

    </script>
}