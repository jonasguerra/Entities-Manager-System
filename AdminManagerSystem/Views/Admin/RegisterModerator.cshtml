@model dynamic

@{
    ViewBag.Title = "register_moderator";
}

<div class="element-wrapper col-8 mx-auto">
    <h6 class="element-header">Registro de moderador</h6>
    <div class="element-box">
        <form id="formValidate">
            <h5 class="form-header">Cadastro de Moderador</h5>
            <legend>
                <span></span>
            </legend>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="">Nome</label>
                        <input class="form-control" data-error="Informe o Nome"
                               placeholder="Nome" required="required" type="text">
                        <div class="help-block form-text with-errors form-control-feedback">
                        </div>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="">Sobrenome</label>
                        <input class="form-control" data-error="Informe o Nome"
                               placeholder="Sobrenome" required="required" type="text">
                        <div class="help-block form-text with-errors form-control-feedback">
                        </div>
                    </div>

                </div>
            </div>

            <div class="form-group">
                <label for=""> E-mail</label>
                <input class="form-control" data-error="E-mail inv�lido"
                       placeholder="Insira o e-mail" required="required" type="email">
                <div class="help-block form-text with-errors form-control-feedback">
                </div>
            </div>
            <div class="row">
                <!--cpf-->
                <div class="col-sm-5">
                    <div class="form-group">
                        <label for="">Cpf</label>
                        <input class="form-control"
                               placeholder="Cpf" required="required" type="text">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for=""> Senha</label>
                        <input class="form-control" data-minlength="8" placeholder=""
                               required="required" type="password">
                        <div class="help-block form-text text-muted form-control-feedback">
                            Minimo 8 caracteres
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="">Confirme a Senha</label>
                        <input class="form-control"
                               data-match-error="Passwords don&#39;t match" placeholder=""
                               required="required" type="password">
                        <div class="help-block form-text with-errors form-control-feedback">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for=""> Estado</label>
                <select class="form-control">
                    <option value="New York">RS - Rio Grande do Sul</option>
                    <option value="California">SP - Sao Paulo</option>
                    <option value="Boston">SC - Santa Catarina</option>
                </select>
            </div>
            <div class="form-group">
                <label for=""> Cidade</label>
                <select class="form-control">
                    <option value="New York">Caxias do Sul</option>
                    <option value="New York">Farroupilha</option>
                    <option value="New York">Porto Alegre</option>
                </select>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for=""> Rua</label>
                        <input class="form-control" data-error="Informe a Rua"
                               placeholder="Rua" required="required" type="text">
                        <div class="help-block form-text with-errors form-control-feedback">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="">Numero</label>
                        <input class="form-control"
                               data-error="Informe o numero do endere�o"
                               placeholder="Numero do endere�o" required="required"
                               type="number">
                        <div class="help-block form-text with-errors form-control-feedback">
                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="form-group">
                        <label for="">Bairro</label>
                        <input class="form-control" data-error="Informe o Bairro"
                               placeholder="Bairro" required="required" type="text">
                        <div class="help-block form-text with-errors form-control-feedback">
                        </div>
                    </div>
                </div>
            </div>
            <fieldset class="form-group">
                <div class="row">

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for=""> Telefone</label>
                            <input class="form-control" data-minlength="8"
                                   placeholder="Telefone" required="required"
                                   type="number">
                            <div class="help-block form-text text-muted form-control-feedback">
                                Minimo 8 caracteres
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                </div>
                <div class="form-group">
                    <label path="photo">Foto</label>
                    <div class="attachment attachment--image">
                        <input onchange="changePhoto(this)" class="file" type="file" id="photo" name="photo" accept=".jpg,.jpeg,.png,.gif" required="required"/>
                        <div class="attachment--label">
                            <span class="placeholder">Imagem (jpg, jpeg, png, gif)</span>
                            <span class="file-name"></span>
                            <span class="attachment--remove">Remover</span>
                        </div>
                        <div class="attachment--error"></div>
                    </div>
                </div>
            </fieldset>
            <div class="form-buttons-w">
                <button class="btn btn-primary" type="submit">
                    Cadastrar
                </button>
            </div>
        </form>
    </div>
</div>